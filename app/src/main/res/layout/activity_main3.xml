<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    tools:context=".MainActivity"

    android:weightSum="1">

    <TextView
        android:id="@+id/text_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:layout_marginLeft="10dp"
        android:textColor="#1dbcdf"
        android:textSize="30sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#0ed9e4"/>


    <TextView
        android:id="@+id/text_view2"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10sp"
        android:text="1.Click on New Game to start a new two player game.\n\n2.You can click on player 1 and player 2 text to change it to your corresponding player name [Name can be of maximum length 10]."
        android:textSize="20sp" />

    <Button
        android:id="@+id/back"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:layout_weight="0.07" />
</LinearLayout>